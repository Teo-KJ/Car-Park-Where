<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/quantum_white_100"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.SignInActivity">

    <TextView
        android:id="@+id/logoTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.15"
        android:text="Car Park Where"
        android:textColor="@color/quantum_grey800"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:paddingTop="20dp"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/signInMainLottieAnimation"
        app:layout_constraintTop_toBottomOf="@id/logoTextView"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHeight_percent="0.3"
        app:lottie_fileName="no_connection.json"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"/>

    <EditText
        android:id="@+id/emailAddressSignInEditText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textCursorDrawable="@null"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/quantum_black_text"
        android:backgroundTint="@color/quantum_grey500"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toBottomOf="@id/signInMainLottieAnimation"
        android:layout_marginTop="20dp"
        android:hint="Enter your email address"
        android:textColorHint="@color/quantum_grey500"
        android:inputType="textEmailAddress"
        app:layout_constraintHeight_percent="0.1"

        />

    <EditText
        android:id="@+id/passwordSignInEditText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textCursorDrawable="@null"
        android:textColorHint="@color/quantum_grey500"
        android:textColor="@color/quantum_black_text"
        android:backgroundTint="@color/quantum_grey500"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toBottomOf="@id/emailAddressSignInEditText"

        android:layout_marginBottom="20dp"

        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintHeight_percent="0.1" />

    <Button
        android:id="@+id/signInButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.05"
        android:textColor="@color/quantum_white_100"
        android:autoSizeTextType="uniform"
        android:text="Sign in"
        android:background="@drawable/login_button_background"
        app:layout_constraintTop_toBottomOf="@id/passwordSignInEditText"

        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"/>

    <Button
        android:id="@+id/createAccountButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.05"
        android:textColor="@color/quantum_white_100"
        android:autoSizeTextType="uniform"
        android:background="@drawable/createaccount_button_background"
        android:text="Create Account"
        app:layout_constraintTop_toBottomOf="@id/signInButton"

        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"/>

    <Button
        android:id="@+id/guessModeButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.05"
        android:text="Guest Mode"
        android:textColor="@color/quantum_white_100"
        android:autoSizeTextType="uniform"
        android:background="@drawable/guesslogin_button_background"
        app:layout_constraintTop_toBottomOf="@id/createAccountButton"

        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp" />

    <Button
        android:id="@+id/resetPasswordButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.05"
        android:text="Forgot Password"
        android:textColor="@color/quantum_white_100"
        android:autoSizeTextType="uniform"
        app:layout_constraintTop_toBottomOf="@id/guessModeButton"
        android:background="@drawable/forgotpassword_button_background"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp" />

