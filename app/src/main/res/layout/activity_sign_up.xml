<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/quantum_white_100"
    tools:context=".Activities.SignUpActivity">

    <TextView
        android:id="@+id/signUpActivity_logoTextView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Car Park Where"
        android:textColor="@color/quantum_black_100"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:textAlignment="center"
        android:paddingTop="20dp"/>

    <EditText
        android:id="@+id/signUpActivity_displayNameEditText"
        android:layout_width="0dp"
        android:textCursorDrawable="@null"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/quantum_black_100"
        android:backgroundTint="@color/quantum_grey500"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toBottomOf="@id/signUpActivity_logoTextView"
        android:layout_marginTop="20dp"
        android:hint="Create your display name"
        android:textColorHint="@color/quantum_grey500"
        android:layout_height="60dp" />

    <EditText
        android:id="@+id/signUpActivity_emailAddressEditText"
        android:layout_width="0dp"
        android:textCursorDrawable="@null"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/quantum_black_100"
        android:backgroundTint="@color/quantum_grey500"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toBottomOf="@id/signUpActivity_displayNameEditText"
        android:layout_marginTop="10dp"
        android:hint="Enter your email address"
        android:textColorHint="@color/quantum_grey500"
        android:inputType="textEmailAddress"
        android:layout_height="60dp" />

    <EditText
        android:id="@+id/signUpActivity_passwordEditText"
        android:layout_width="0dp"
        android:textCursorDrawable="@null"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/quantum_black_100"
        android:backgroundTint="@color/quantum_grey500"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toBottomOf="@id/signUpActivity_emailAddressEditText"
        android:layout_marginTop="10dp"
        android:hint="Password"
        android:textColorHint="@color/quantum_grey500"
        android:inputType="textPassword"
        android:layout_height="60dp" />

    <!--<EditText-->
        <!--android:id="@+id/passwordSignUpEditText"-->
        <!--android:layout_width="0dp"-->
        <!--android:textCursorDrawable="@null"-->
        <!--app:layout_constraintLeft_toLeftOf="parent"-->
        <!--app:layout_constraintRight_toRightOf="parent"-->
        <!--android:textColor="@color/quantum_white_100"-->
