<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".Activities.CarparkReviewsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.65"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:text="5"
                        android:gravity="center_vertical"
                        android:textAlignment="center"
                        android:textSize="12sp"/>

                    <ProgressBar
                        android:id="@+id/progress_bar_star5"
                        android:progress="0"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_height="15dp"
                        android:layout_margin="1dp"
                        android:indeterminate="false"
                        android:progressDrawable="@drawable/curved_progress_bar"
                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:text="4"
                        android:gravity="center_vertical"
                        android:textAlignment="center"
                        android:textSize="12sp"/>

                    <ProgressBar
                        android:id="@+id/progress_bar_star4"
                        android:progress="0"
                        android:layout_gravity="center_vertical"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:layout_margin="1dp"
                        android:indeterminate="false"
                        android:progressDrawable="@drawable/curved_progress_bar"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:text="3"
                        android:gravity="center_vertical"
                        android:textAlignment="center"
                        android:textSize="12sp"/>

                    <ProgressBar
                        android:id="@+id/progress_bar_star3"
                        android:progress="0"
                        android:layout_gravity="center_vertical"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:layout_margin="1dp"
                        android:indeterminate="false"
                        android:progressDrawable="@drawable/curved_progress_bar"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:text="2"
                        android:gravity="center_vertical"
                        android:textAlignment="center"
                        android:textSize="12sp"/>

                    <ProgressBar
                        android:id="@+id/progress_bar_star2"
                        android:progress="0"
                        android:layout_gravity="center_vertical"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:layout_margin="1dp"
                        android:indeterminate="false"
                        android:progressDrawable="@drawable/curved_progress_bar"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:text="1"
                        android:gravity="center_vertical"
                        android:textAlignment="center"
                        android:textSize="12sp"/>

                    <ProgressBar
                        android:id="@+id/progress_bar_star1"
                        android:progress="0"
                        android:layout_gravity="center_vertical"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:layout_margin="1dp"
                        android:indeterminate="false"
                        android:progressDrawable="@drawable/curved_progress_bar"
                        />

                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.35"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/overallReviewAverage_TV"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:text="0.0"
                    android:paddingTop="30dp"
                    android:textStyle="bold"
                    android:textColor="@color/quantum_black_text"
                    android:textSize="50sp"
                    android:textAlignment="center"

                    />

                <TextView
                    android:id="@+id/totalReviewCountText"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.4"
                    android:text="(0)"
                    android:textAlignment="center"
                    android:paddingTop="10dp"
                    />


            </LinearLayout>




        </LinearLayout>

        <ListView
            android:id="@+id/divider4"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="0dp"
            android:background="?android:attr/listDivider"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/reviews_RV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>